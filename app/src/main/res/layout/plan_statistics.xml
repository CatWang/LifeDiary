<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@drawable/urgent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/urgent"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"
            android:layout_margin="35dp"
            android:textStyle="bold"
            android:id="@+id/plan_statistics_urgent_title_textview"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:layout_below="@id/plan_statistics_urgent_title_textview"
            android:id="@+id/plan_statistics_urgent_number"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cardview_dark_background"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="1"
        android:background="@drawable/normal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/normal"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:layout_margin="35dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:id="@+id/plan_statistics_normal_title_textview"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:id="@+id/plan_statistics_normal_number"
            android:textColor="@color/white"
            android:layout_below="@id/plan_statistics_normal_title_textview"
            android:textStyle="bold"
            />
    </RelativeLayout>
</LinearLayout>
